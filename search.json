---
layout: null
permalink: /search.json
---

[
{%- for post in site.posts -%}
  {%- capture thumb -%}{% include find-thumb.html post=post %}{%- endcapture -%}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | absolute_url | jsonify }},
    "date": {{ post.date | date: "%Y-%m-%d" | jsonify }},
    "thumb": {{ thumb | strip | jsonify }},
    "excerpt": {{ post.excerpt | strip_html | normalize_whitespace | truncate: 240 | jsonify }},
    "content": {{ post.content | strip_html | normalize_whitespace | truncate: 1000 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{%- endfor -%}
]
