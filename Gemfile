source "https://rubygems.org"

# Вариант 1 (проще и стабильнее под Pages):
gem "github-pages", group: :jekyll_plugins

# Плагины, которые не входят в meta-gem, можно подключить здесь же:
gem "jekyll-paginate"
gem "jekyll-seo-tag"
gem "jekyll-feed"
gem "jekyll-sitemap"

# For GitHub Flavored Markdown (autolink bare URLs, etc.)
gem "kramdown-parser-gfm", "~> 1.1"